<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="uk.iloveruby.huawei.hms.maps.utils.demo">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="22" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="22" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.huawei.appmarket.service.commondata.permission.GET_COMMON_DATA" />

    <permission
        android:name="com.huawei.hms.mapsutils.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.huawei.hms.mapsutils.permission.MAPS_RECEIVE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!--
        To add your Maps API key to this project:
            1. Create a file demo/secure.properties
            2. Add this line, where YOUR_API_KEY is your API key:
                APP_ID=YOUR_API_KEY
        -->
        <meta-data
            android:name="com.huawei.hms.client.appid"
            android:value="app_id={@string/app_id}" />

        <activity
            android:name="com.huawei.hms.maps.utils.demo.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.huawei.hms.maps.utils.demo.PolyDecodeDemoActivity" />
        <activity android:name="com.huawei.hms.maps.utils.demo.PolySimplifyDemoActivity" />
        <activity android:name="com.huawei.hms.maps.utils.demo.IconGeneratorDemoActivity" />
        <activity android:name="com.huawei.hms.maps.utils.demo.DistanceDemoActivity" />
        <activity android:name="com.huawei.hms.maps.utils.demo.ClusteringDemoActivity" />
        <activity android:name="com.huawei.hms.maps.utils.demo.BigClusteringDemoActivity" />
        <activity android:name="com.huawei.hms.maps.utils.demo.VisibleClusteringDemoActivity" />
        <activity android:name="com.huawei.hms.maps.utils.demo.CustomMarkerClusteringDemoActivity" />
        <activity android:name="com.huawei.hms.maps.utils.demo.ClusteringViewModelDemoActivity" />
        <activity android:name="com.huawei.hms.maps.utils.demo.TileProviderAndProjectionDemo" />
        <activity android:name="com.huawei.hms.maps.utils.demo.HeatmapsDemoActivity" />
        <activity android:name="com.huawei.hms.maps.utils.demo.HeatmapsPlacesDemoActivity" />
        <activity android:name="com.huawei.hms.maps.utils.demo.GeoJsonDemoActivity" />
        <activity android:name="com.huawei.hms.maps.utils.demo.KmlDemoActivity" />
        <activity android:name="com.huawei.hms.maps.utils.demo.MultiLayerDemoActivity" />

    </application>

</manifest>